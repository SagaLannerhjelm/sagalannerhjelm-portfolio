<div class="form-page">
  <div class="card form-container p-centered new-project-container">
    <div class="card-header p-centered">
      <div class="card-title h3 form-title">Edit project</div>
    </div>
    <form
      action="/edit-project"
      method="post"
      class="card-body form-content side-margin"
    >
      <div>
        <div class="form-group">
          <label class="form-label">Title</label>
          <input
            name="title"
            class="form-input"
            type="text"
            placeholder="Title"
          />
        </div>
        <div class="form-group">
          <label class="form-label">Description</label>
          <input
            name="description"
            class="form-input"
            type="text"
            placeholder="Description"
          />
        </div>
      </div>
      <div>
        <div class="form-group">
          <label class="form-label">Category</label>
          <select name="category" class="form-select">
            <option>Choose an option</option>
            <option>Illustration</option>
            <option>Game development</option>
            <option>Website</option>
            <option>Graphic design</option>
          </select>
        </div>
        <div class="form-group">
          <label class="form-label">Date</label>
          <input name="date" class="form-input" type="date" />
        </div>
        <div class="form-group">
          <label class="form-label">File</label>
          <input
            name="file"
            class="form-input"
            type="file"
            placeholder="Upload a file"
          />
        </div>
      </div>
      <div class="button-container">
        <a class="btn p-centered" href="/#projects">Cancel</a>
        <button type="submit" class="btn btn-primary p-centered">Confirm changes</button>
      </div>
    </form>

  </div>
</div>