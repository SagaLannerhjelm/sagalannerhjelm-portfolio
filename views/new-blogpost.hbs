<p class="my-breadcrumb position-absolute">
  <a class="breadcrumb-link" href="/blog">Blog</a>
  /
  <a class="breadcrumb-link">New blog post</a>
</p>

<form class="form-page" action="/new-blog" method="post">
  <div class="card form-container p-centered">
    <div class="card-header p-centered">
      <div class="card-title h3 form-title">New blog post</div>
    </div>
    <div class="card-body form-content side-margin">
      <div>
        <div class="form-group">
          <label class="form-label">Title</label>
          <input
            class="form-input"
            type="text"
            placeholder="Title"
            name="title"
          />
        </div>
        <div class="form-group">
          <label class="form-label">Description</label>
          <input
            class="form-input"
            type="text"
            placeholder="Description"
            name="description"
          />
        </div>
      </div>
      <div>
        <div class="form-group">
          <label class="form-label">File</label>
          <input class="form-input" type="file" name="file" />
        </div>
      </div>

    </div>
    <div class="button-container p-centered">
      <a class="btn" href="/blog">Cancel</a>
      <button class="btn btn-primary" type="submit">Create</button>
    </div>
  </div>
</form>