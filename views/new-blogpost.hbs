<div class="form-page">
  <div class="card form-container p-centered">
    <div class="card-header p-centered">
      <div class="card-title h3 form-title">New blog post</div>
    </div>
    <div class="card-body form-content side-margin">
      <div>
        <div class="form-group">
          <label class="form-label" for="input-example-1">Title</label>
          <input
            class="form-input"
            type="text"
            id="input-example-1"
            placeholder="Mail"
          />
        </div>
        <div class="form-group">
          <label class="form-label" for="input-example-1">Description</label>
          <input
            class="form-input"
            type="text"
            id="input-example-1"
            placeholder="Password"
          />
        </div>
      </div>
      <div>
        <div class="form-group">
          <label class="form-label" for="input-example-1">File</label>
          <input
            class="form-input"
            type="file"
            id="input-example-1"
            placeholder="Upload a file"
          />
        </div>
      </div>

    </div>
    <div class="button-container">
      <a class="btn p-centered" href="/blog">Cancel</a>
      <button class="btn btn-primary p-centered">Create</button>
    </div>
  </div>
</div>