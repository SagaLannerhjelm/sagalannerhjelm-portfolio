{{#if session.isLoggedIn}}

  <p class="breadcrumb position-absolute">
    <a class="breadcrumb-link" href="/blog">Blog</a>
    /
    <a class="breadcrumb-link">New blog post</a>
  </p>

  <form
    class="form-page"
    action="/new-blog"
    method="post"
    enctype="multipart/form-data"
  >
    <div class="card form-container p-centered">
      <div class="card-header p-centered">
        <div class="card-title h3 form-title">New blog post</div>
      </div>

      {{! Display error messages }}
      {{#if errorMessages.length}}
        <div class="error-message-container bg-error">
          <ul class="error-message text-light">
            {{#each errorMessages}}
              <li class="error-message-list">{{this}}</li>
            {{/each}}
          </ul>
        </div>
      {{/if}}

      <div class="card-body side-margin">
        <div class="blog-form-margin">
          <div class="form-group">
            <label class="form-label">Title</label>
            <input
              class="form-input"
              type="text"
              placeholder="Title"
              name="title"
              value="{{title}}"
            />
          </div>
          <div class="form-group">
            <label class="form-label">Description</label>
            <textarea
              class="form-input"
              type="text"
              placeholder="Description"
              name="description"
              rows="7"
            >{{description}}</textarea>
          </div>
          <div class="form-group">
            <label class="form-label">File</label>
            <input
              name="image"
              class="form-input picture-input"
              type="file"
              accept="image/*"
            />
          </div>
        </div>
      </div>
      <div class="button-container p-centered">
        <a class="btn" href="/blog?page=1">Cancel</a>
        <button class="btn btn-primary" type="submit">Next</button>
      </div>
    </div>
  </form>

{{else}}

  <img
    src="/images/low_opacity_clouds.png"
    alt="illustration of clouds"
    class="cloud clouds-picture"
  />
  <div class="locked-page">
    <div class="not-logged-in-container">
      <p class="position-relative">You are not logged in :&lpar;. You need to be
        Logged in to access this page.</p>
      <a href="/login" class="btn btn-primary">Go to login</a>
    </div>
  </div>

{{/if}}