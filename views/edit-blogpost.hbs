<p class="my-breadcrumb position-absolute">
  <a class="breadcrumb-link" href="/blog">Blog</a>
  /
  <a class="breadcrumb-link">Edit blog post</a>
</p>

<div class="form-page">
  <div class="card form-container p-centered">
    <div class="card-header p-centered">
      <div class="card-title h3 form-title">Edit blog post</div>
    </div>
    <div class="card-body form-content side-margin">
      <div>
        <div class="form-group">
          <label class="form-label">Title</label>
          <input
            class="form-input"
            type="text"
            placeholder="Title"
            value="{{blog.blogTitle}}"
          />
        </div>
        <div class="form-group">
          <label class="form-label">Description</label>
          <textarea
            class="form-input"
            type="text"
            placeholder="Description"
            value="{{blog.blogDescription}}"
            rows="7"
          ></textarea>
        </div>
      </div>
      <div>
        <div class="form-group">
          <label class="form-label">File</label>
          <input class="form-input" type="file" />
        </div>
      </div>

    </div>
    <div class="button-container p-centered">
      <a class="btn" href="/blog">Cancel</a>
      <button class="btn btn-primary">Confirm changes</button>
    </div>
  </div>
</div>